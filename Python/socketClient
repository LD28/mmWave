import socket

HOST = '192.168.0.105'  # The server's hostname or IP address
PORT = 9000       # The port used by the server

with socket.socket(socket.AF_INET, socket.SOCK_STREAM) as s:
    s.connect((HOST, PORT))
    while True:
        s.sendall(b'Hello, world')
        data = s.recv(1024)

        print('Received', repr(data))
